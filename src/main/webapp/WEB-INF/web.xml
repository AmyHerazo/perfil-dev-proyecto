<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Mi Perfil Dev</display-name>
    
    <!-- Configuración de Servlets -->
    <servlet>
        <servlet-name>PerfilServlet</servlet-name>
        <servlet-class>com.perfildevproyecto.controller.PerfilServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PerfilServlet</servlet-name>
        <url-pattern>/perfil</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>HabilidadServlet</servlet-name>
        <servlet-class>com.perfildevproyecto.controller.HabilidadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HabilidadServlet</servlet-name>
        <url-pattern>/habilidades/*</url-pattern>
    </servlet-mapping>
    
    <!-- Configuración de bienvenida -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
